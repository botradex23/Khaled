# Database Configuration
# -------------------------------------------------------------------------------
# MongoDB connection string. Required for user data, API key storage, and bot configurations.
MONGO_URI=mongodb://username:password@hostname:port/database

# Security Configuration
# -------------------------------------------------------------------------------
# IMPORTANT: Set this to a secure random string at least 32 characters long.
# Used for encrypting API keys stored in the database.
# If you change this after API keys are stored, they will no longer be retrievable.
ENCRYPTION_KEY=replace_with_secure_random_string_32chars_min

# Flask Configuration (Python API Service)
# -------------------------------------------------------------------------------
# Secret key for secure Flask session storage
FLASK_SECRET_KEY=another_secure_random_string

# Server Configuration
# -------------------------------------------------------------------------------
# Port for the Node.js server
PORT=5000
# Port for the Python Flask service
FLASK_PORT=5001
# Set to 'production' in live environments
NODE_ENV=development
# Enable/disable debug logging
DEBUG=true

# Binance API Configuration
# -------------------------------------------------------------------------------
# Optional: Default Binance API keys for development/testing
# In production, users should provide their own keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
# Use testnet for development (true/false)
BINANCE_TESTNET=false

# Proxy Configuration for Geo-Restricted Access
# -------------------------------------------------------------------------------
# Enable proxy for accessing exchanges from restricted regions
USE_PROXY=true
PROXY_PROTOCOL=http     # Options: http, https, socks4, socks5
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password
PROXY_IP=proxy_ip_address
PROXY_PORT=proxy_port
# Fall back to direct connection if proxy fails (true/false)
FALLBACK_TO_DIRECT=false
# Use multiple proxies defined in proxies.json (advanced)
USE_MULTIPLE_PROXIES=false

# OKX API Configuration (Fallback Exchange)
# -------------------------------------------------------------------------------
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
# Use testnet for development (true/false)
OKX_TESTNET=true

# Google OAuth Configuration (Optional)
# -------------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Apple OAuth Configuration (Optional)
# -------------------------------------------------------------------------------
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key
APPLE_CALLBACK_URL=http://localhost:5000/api/auth/apple/callback

# AI Trading Configuration
# -------------------------------------------------------------------------------
# Percentage of portfolio to risk on each trade (default: 1%)
DEFAULT_RISK_PERCENTAGE=1
# Default stop loss percentage (default: 5%)
DEFAULT_STOP_LOSS=5
# Default take profit percentage (default: 10%)
DEFAULT_TAKE_PROFIT=10
# Enable/disable AI trading (true/false)
ENABLE_AI_TRADING=true
# AI trading mode (active/passive)
AI_TRADING_MODE=passive