# Server Configuration
# -------------------------------------------------------------------------------
# Port for the Node.js server - Railway will provide this automatically
PORT=5000
# Node environment - set to 'production' for Railway
NODE_ENV=production
# Session secret - used for securing user sessions
SESSION_SECRET=your_secure_session_secret_here

# Database Configuration
# -------------------------------------------------------------------------------
# MongoDB connection string (required for user data and bot configurations)
MONGO_URI=mongodb://username:password@hostname:port/database
# PostgreSQL connection string (required for relational data)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security Configuration
# -------------------------------------------------------------------------------
# Encryption key for API keys stored in database (min 32 chars)
ENCRYPTION_KEY=your_secure_encryption_key_here
# Demo mode controls
USE_DEMO_MODE=false
FALLBACK_TO_DEMO=false

# Binance API Configuration
# -------------------------------------------------------------------------------
# API keys for Binance integration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
# Use testnet for testing (true/false)
USE_TESTNET=false

# Proxy Configuration for Geo-Restricted Access
# -------------------------------------------------------------------------------
# Enable proxy for accessing exchanges from restricted regions
USE_PROXY=true
PROXY_PROTOCOL=http
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password
PROXY_IP=your_proxy_ip
PROXY_PORT=your_proxy_port
# URL encoding method for proxy credentials (quote, quote_plus, none)
PROXY_ENCODING_METHOD=quote_plus
# Fallback to direct connection if proxy fails
FALLBACK_TO_DIRECT=true

# Authentication Configuration
# -------------------------------------------------------------------------------
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Apple OAuth (optional)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# OpenAI Configuration (for AI features)
# -------------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key

# Binance Proxy Configuration (TypeScript SDK)
# -------------------------------------------------------------------------------
BINANCE_PROXY_HOST=your_proxy_ip
BINANCE_PROXY_PORT=your_proxy_port
BINANCE_PROXY_USERNAME=your_proxy_username
BINANCE_PROXY_PASSWORD=your_proxy_password
